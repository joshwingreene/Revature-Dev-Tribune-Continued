
<div class="container" style="display: flex; flex-direction: column; justify-content: center">
    <form asp-action="show_article_creator" asp-controller="author" method="GET" style="margin-bottom: 13px; display: flex; width: 100%; justify-content: flex-end">
        <button class="btn-primary" type="submit">New Article</button>
    </form>
    <ul id="article_list">
        @for(var i = 0; i < @Model.Count; i++)
        {
            <li class="card" style="margin-bottom: 10px">
                <div class="card-body">
                    <a asp-action="show_article_editor" asp-controller="author" asp-route-id="@Model[i].EntityId" method="GET">
                        <h4>@Model[i].Title</h4>
                    </a>
                    <p>By: @Model[i].Author.Name</p>
                </div>
                <hr id="card-divider" />
                <div class="card-body" id="article-sub-area">
                    <div style="width: 30%; display: flex; flex-direction: row">
                        <form asp-action="show_article_editor" asp-route-id="@Model[i].EntityId" asp-controller="author" method="GET">
                            <button id="article-list-edit-btn" class="btn-link article-list-btn" type="submit">Edit</button>
                        </form>
                        <form asp-action="delete_article" asp-route-id="@Model[i].EntityId" asp-controller="author" method="POST">
                            <button id="article-list-delete-btn" class="btn-link article-list-btn" type="submit">Delete</button>
                        </form>
                    </div>
                    @if(Model[i].isPublished)
                    {
                        <p style="color: green">Published</p>
                    }
                    else
                    {
                        <p style="color: red">Not Published</p>
                    }
                </div>
            </li>
        }
    </ul>
</div>