@model MvcApp.Client.Models.Shared.ArticleViewModel

<div class="container-form-center">

  <form class="content-form" asp-action="edit_article" asp-controller="author" method="POST">
    <div class="from-group col-md-6">
      <div class="form-group" style="display: flex; flex-direction: column">
        <input style="margin-bottom: 15px" class="form-control" type="text" id="title" value="@Model.Title" placeholder="Enter title" asp-for="@Model.Title" required/>
        <select asp-for="@Model.ChosenTopic">
            <option selected="">Select Topic</option>
            @for(var i = 0; i < @Model.AvailableTopics.Count; i++)
            {
              <option>@Model.AvailableTopics[i].Text</option>
            }
        </select>
      </div>
    </div>
    <div class="from-group col-md-6">
      <div class="form-group">
        <textarea asp-for="@Model.Body" class="container-fluid" name="body" id="body" cols="30" rows="10" required></textarea>
      </div>
    </div>
    <div class="from-group col-md-6">
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("author_main", "Author")'">Go Back</button>
      </div>
    </div>
  </form>

</div>
