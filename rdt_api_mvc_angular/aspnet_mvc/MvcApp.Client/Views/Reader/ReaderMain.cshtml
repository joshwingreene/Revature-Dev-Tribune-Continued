@model MvcApp.Client.Models.Reader.ArticleTopicBundleViewModel

@Html.Partial("TopicNavigation", @Model.Topics)

<div class ="container-fluid">
    @for(int i = 0; i < @Model.Articles.Count; i++)
    {
        <div class="row " id="section-Article">
            <div class="col-sm" id="col-div-right">
            <figure>
                <img class="figure-img img-fluid" src="@Model.Articles[i].TopicImageUrls[@Model.Articles[i].Topic.EntityId]" alt="Article Image" style="width:400px;height:300px" >
            </figure>
            </div>
            <div class="col-sm" id="col-div-right">
            <header>
                <h2>@Model.Articles[i].Title</h2>
                <h3 style="color: #6C757D;">@Model.Articles[i].Topic.Name</h3>
            </header>
            <body>
                <p>@Model.Articles[i].Body</p>
            </body>
            <small>@Model.Articles[i].Author.Name</small>
                <a href="#">Load More..</a>
            </div>
        </div>
    }
</div>