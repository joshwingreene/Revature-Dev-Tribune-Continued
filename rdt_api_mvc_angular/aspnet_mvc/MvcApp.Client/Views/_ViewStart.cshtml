@{
    string CurrentControllerName = ViewContext.RouteData.Values["Controller"].ToString();
    switch (CurrentControllerName)
    {
        case "Author":
            ViewBag.Title = @User.Identity.Name;
            // TODO: Change this to the user's first name when Okta sign-in is functioning and do something similar for the reader perspective
            Layout = "~/Views/Shared/_LayoutAuthor.cshtml";
            break;
        case "Reader":
            Layout = "~/Views/Shared/_LayoutReader.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_LayoutLanding.cshtml";
            break;
    }
}
